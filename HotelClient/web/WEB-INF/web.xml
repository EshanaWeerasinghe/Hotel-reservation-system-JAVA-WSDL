<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.hotel.servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Hotel_Management</servlet-name>
        <servlet-class>com.hotel.servlet.Hotel_Management</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Employee_Management</servlet-name>
        <servlet-class>com.hotel.servlet.Employee_Management</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerLogin</servlet-name>
        <servlet-class>com.hotel.servlet.CustomerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerRegistration</servlet-name>
        <servlet-class>com.hotel.servlet.CustomerRegistration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookRooms</servlet-name>
        <servlet-class>com.hotel.servlet.BookRooms</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Hotel_Management</servlet-name>
        <url-pattern>/Hotel_Management</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Employee_Management</servlet-name>
        <url-pattern>/Employee_Management</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerLogin</servlet-name>
        <url-pattern>/CustomerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerRegistration</servlet-name>
        <url-pattern>/CustomerRegistration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookRooms</servlet-name>
        <url-pattern>/BookRooms</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
